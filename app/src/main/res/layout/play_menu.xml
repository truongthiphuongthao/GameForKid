<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image13"
    tools:context=".play_menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
<!--        Text View Play Game-->
        <TextView
            android:id="@+id/playgame"
            android:weightSum="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000000"
            android:text="PLAY GAME"
            android:textSize="40dp" />
<!--        Button View Score-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">
            <Button
                android:id="@+id/btn_viewscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="VIEW SCORE"
                android:textColor="@color/colorWhite1"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/btn_viewscore"
                android:layout_weight="1"/>
        </LinearLayout>
<!--        Button Addition, Subtraction-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_addition"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:text="Addition"
                android:textStyle="bold"
                android:textColor="#F8F8FF"
                android:background="@drawable/btn_add"
                android:textSize="18dp" />
            <Button
                android:id="@+id/btn_subtraction"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#F8F8FF"
                android:text="Subtraction"
                android:background="@drawable/btn_sub"
                android:textSize="18dp" />
        </LinearLayout>
<!--        Button Back-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_back"
                android:padding="20dp"
                android:text="Back"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>